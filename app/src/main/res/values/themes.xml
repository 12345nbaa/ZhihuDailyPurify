<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ZhihuDailyPurify.Light" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="searchViewStyle">@style/Theme.ZhihuDailyPurify.SearchViewStyle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.Light.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="popupTheme">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.SearchViewStyle" parent="Base.Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/noimage</item>
    </style>

    <style name="Theme.ZhihuDailyPurify.ActionBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>